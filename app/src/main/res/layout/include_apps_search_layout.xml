<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_search_app"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_36"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:background="@drawable/shape_search_drawable"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp10"
        android:src="@drawable/icon_search" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/InputSearchInfo"
            android:textColor="@color/etHintColor"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/InputSearchInfo"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textColorHint="@color/etHintColor"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            android:visibility="gone" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp10"
        android:src="@mipmap/logo" />
</LinearLayout>
