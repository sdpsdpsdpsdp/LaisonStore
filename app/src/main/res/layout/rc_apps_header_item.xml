    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_160"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    app:cardElevation="@dimen/card_elevation_dimen"
